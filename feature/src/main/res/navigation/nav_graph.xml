<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_common_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.sopt.now.advanced.team2android.feature.presentation.splash.SplashFragment"
        android:label="fragment_splash">
        <action
            android:id="@+id/action_splash_to_sign_in"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.sopt.now.advanced.team2android.feature.presentation.signIn.SignInFragment"
        android:label="fragment_sign_in">
        <action
            android:id="@+id/action_sign_in_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_sign_in_to_sign_up"
            app:destination="@id/signUpFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.sopt.now.advanced.team2android.feature.presentation.signUp.SignUpFragment"
        android:label="fragment_sign_up">
        <action
            android:id="@+id/action_sign_up_to_home"
            app:destination="@id/signInFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sopt.now.advanced.team2android.feature.presentation.home.HomeFragment"
        android:label="fragment_home">
        <action
            android:id="@+id/action_home_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_home_to_my_page"
            app:destination="@id/myPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sopt.now.advanced.team2android.feature.presentation.search.SearchFragment"
        android:label="fragment_search">
        <action
            android:id="@+id/action_search_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_search_to_my_page"
            app:destination="@id/myPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.sopt.now.advanced.team2android.feature.presentation.myPage.MyPageFragment"
        android:label="fragment_my_page">
        <action
            android:id="@+id/action_main_to_sign_in"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_my_page_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_my_page_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>